<script type="text/javascript">
function checkRsvp(){
  if(document.getElementById("rsvp").checked){
    document.getElementsByName("commit")[0].value="Submit RSVP";
  } else {
    document.getElementsByName("commit")[0].value="Send Regrets";
  }
}
</script>

<h2 class="title">RSVP</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    
  </div>

  <div class="form-horizontal">
    <div class="form-group">
      <%= f.email_field :email, autofocus: true, placeholder: "Email", class: "sm-forms submit" %>
    </div>
    <div class="form-group">
      <%= f.text_field :name, autofocus: true, placeholder: "Name", class: "sm-forms submit" %>
    </div>
    <div class="form-group">
      <%= f.password_field :password, autocomplete: "off", placeholder: "Password ("+@minimum_password_length.to_s+" characters minimum)", class: "sm-forms submit" %>      
    </div>
    <div class="form-group">
      <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Re-enter Your Password", class: "sm-forms submit" %>
    </div>

    <div class="checkbox" align="left" style="padding-left: 50%;">
      <%= check_box_tag(:rsvp, value = "true", false,  :onclick => "checkRsvp()") %>
      <%= label_tag :rsvp, "RSVP", class: "sm-text" %> 
    </div>
    <br>
    <%= f.submit "Send Regrets", :class => 'btn-semi-mini submit' %>
  </div>
<% end %>
<br>
<%= link_to "Log in", new_session_path(resource_name), class: "btn-semi-mini submit" %>
